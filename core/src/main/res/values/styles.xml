<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="DefaultTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="DefaultTextInputStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/selector_color_edit_text</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>
    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:tint">@color/primary</item>
    </style>
    <style name="QuizEditorDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/ScaleInOutAnimation</item>
        <item name="android:windowBackground">@drawable/background_dialog</item>
        <item name="colorPrimary">@color/primary</item>
    </style>
    <style name="QuizEditorBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="enableEdgeToEdge">true</item>
        <item name="android:navigationBarColor">@color/transparent</item>
    </style>
    <style name="FadeInOutAnimation" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="ScaleInOutAnimation" parent="Theme.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <style name="QuizEditorLabelSmall" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="QuizEditorLabelMedium" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="QuizEditorCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="QuizEditorButtonDestructive" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>