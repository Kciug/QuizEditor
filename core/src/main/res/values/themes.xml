<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuizEditor" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="dialogTheme">@style/QuizEditorDialog</item>
    </style>
    <style name="Theme.QuizEditor.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textViewStyle">@style/DefaultTextStyle</item>
        <item name="editTextStyle">@style/DefaultTextInputStyle</item>

        <item name="android:dialogTheme">@style/QuizEditorDialog</item>
    </style>
    <style name="Theme.QuizEditor.DrawerBar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/primary</item>
    </style>
    <style name="Theme.QuizEditor.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="elevation">0dp</item>
        <item name="colorPrimary">@color/transparent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="colorControlNormal">@color/primary</item>

        <item name="iconTint">@color/primary</item>
        <item name="colorOnPrimary">@color/primary</item>
        <item name="android:fillColor">?attr/colorControlNormal</item>
        <item name="android:textColorSecondary">@color/primary</item>"
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="colorAccent">@color/primary</item>"
    </style>
    <style name="Theme.QuizEditor.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>