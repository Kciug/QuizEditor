<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <include
        android:id="@+id/navbar"
        layout="@layout/layout_bottom_sheet_nav_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_question_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/label_question"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navbar" />

    <EditText
        android:id="@+id/input_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints="name"
        android:background="@drawable/background_tile"
        android:hint="@string/hint_question"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_question_header"
        tools:ignore="TextFields" />

    <include
        android:id="@+id/creation_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/layout_creation_details"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/input_question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <include
        android:id="@+id/correctness_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/layout_correctness_picker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_question"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/btn_add_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_save_and_add_another"
        android:background="@drawable/background_tile"
        app:layout_constraintTop_toBottomOf="@id/correctness_picker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:padding="20dp"/>

    <include
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/layout_loading"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="tv_question_header, input_question, correctness_picker, btn_add_next"/>

</androidx.constraintlayout.widget.ConstraintLayout>