<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/QuizEditorCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_direction"
                style="@style/QuizEditorLabelMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/orange_primary"
                tools:text="DEVELOPMENT -> PRODUCTION" />

            <TextView
                android:id="@+id/tv_date"
                style="@style/QuizEditorLabelSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                tools:text="2024-05-20" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_count"
            style="@style/QuizEditorLabelSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="Items count: 15" />

        <LinearLayout
            android:id="@+id/expanded_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="12dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tv_performed_by"
                style="@style/QuizEditorLabelSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Performed by: John Doe" />

            <TextView
                android:id="@+id/tv_details_list"
                style="@style/QuizEditorLabelSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_secondary"
                tools:text="- Category 1 (10 questions)
- Category 2 (5 questions)" />

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
