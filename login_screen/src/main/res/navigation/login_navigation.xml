<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_navigation"
    app:startDestination="@id/navigation_login">

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.rafalskrzypczyk.login_screen.login.LoginFragment"
        android:label="@string/nav_login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_login_to_reset_password"
            app:destination="@id/navigation_reset_password"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_reset_password"
        android:name="com.rafalskrzypczyk.login_screen.reset_password.ResetPasswordFragment"
        android:label="@string/nav_reset_password"
        tools:layout="@layout/fragment_reset_password">

        <action
            android:id="@+id/action_reset_password_to_login"
            app:destination="@id/navigation_login"
            app:popUpTo="@id/navigation_login"
            app:popUpToInclusive="true"/>
    </fragment>

</navigation>