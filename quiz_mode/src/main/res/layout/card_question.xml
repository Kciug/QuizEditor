<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/card_background">

    <!-- Pytanie -->
    <TextView
        android:id="@+id/question_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Which organ filters blood in the human body?"
        android:textSize="16sp"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Kategorie -->
    <LinearLayout
        android:id="@+id/categories_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question_text"
        android:layout_marginTop="8dp">

        <!-- Przykładowa kategoria 1 -->
        <TextView
            android:id="@+id/category_label_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="General Knowledge"
            android:textColor="#311B92"
            android:textSize="12sp" />

        <!-- Przykładowa kategoria 2 -->
        <TextView
            android:id="@+id/category_label_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Body"
            android:textSize="12sp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textColor="@android:color/white"
            android:background="@color/purple_700"
            android:gravity="center" />
    </LinearLayout>

    <!-- Ikona odpowiedzi i liczba -->
    <LinearLayout
        android:id="@+id/question_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/categories_list"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/answers_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_answers_24"
            android:contentDescription="@string/ic_desc_answers" />

        <TextView
            android:id="@+id/answers_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="4 Answers"
            android:textSize="14sp"
            android:layout_marginStart="4dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/validation_status"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check_24"
            android:contentDescription="@string/ic_desc_validation_ok"
            app:tint="@android:color/holo_green_light" />
    </LinearLayout>

    <!-- Status walidacji -->


</androidx.constraintlayout.widget.ConstraintLayout>