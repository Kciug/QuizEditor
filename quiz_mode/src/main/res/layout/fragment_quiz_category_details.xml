<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.QuizCategoryDetailsFragment">

    <!-- Sekcja Detali -->
    <LinearLayout
        android:id="@+id/details_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/category_details_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_category_details"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <!-- Przycisk Edycji -->
            <Button
                android:id="@+id/edit_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/button_edit_category_text"
                android:textColor="@color/purple_500"
                android:textSize="12sp"/>
        </LinearLayout>



        <FrameLayout
            android:id="@+id/details_section_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/category_name_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/label_category_title" />

                <EditText
                    android:id="@+id/category_name_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:enabled="false"
                    android:autofillHints=""
                    android:inputType="textCapWords"
                    android:hint="@string/hint_category_title"/>

                <TextView
                    android:id="@+id/category_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/label_category_desc"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/category_description_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:enabled="false"
                    android:autofillHints=""
                    android:inputType="textShortMessage"
                    android:hint="@string/hint_category_desc"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/category_status_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_category_status" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/category_status"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:paddingHorizontal="10dp"
                        android:gravity="center"
                        android:text="In Progress"
                        android:background="@drawable/category_status_background"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/category_color_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_category_color" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <RadioButton
                        android:id="@+id/color_picker_button"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:buttonTint="@color/transparent"
                        android:background="@drawable/color_picker_button"/>

                </LinearLayout>

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <View
        android:id="@+id/category_details_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/dividerVertical"
        app:layout_constraintTop_toBottomOf="@id/details_section"
        android:layout_marginHorizontal="16dp"/>

    <!-- Sekcja Pytań -->
    <LinearLayout
        android:id="@+id/questions_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/category_details_separator"
        app:layout_constraintTop_toBottomOf="@+id/details_section">

        <TextView
            android:id="@+id/questions_section_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_category_questions_section"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/category_questions_count_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:text="@string/label_category_questions_amount" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/category_questions_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:text=""
                android:textStyle="bold"/>
        </LinearLayout>



        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Przycisk dodania nowego pytania -->
            <Button
                android:id="@+id/add_new_question_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/button_category_add_new_text"
                android:textColor="@color/purple_500"/>

            <!-- Przycisk dodania pytania z bazy -->
            <Button
                android:id="@+id/add_from_database_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/button_category_add_from_database_text"
                android:textColor="@color/purple_500"/>
        </LinearLayout>

        <!-- RecyclerView dla pytań -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/questions_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            tools:listitem="@android:layout/simple_list_item_1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>