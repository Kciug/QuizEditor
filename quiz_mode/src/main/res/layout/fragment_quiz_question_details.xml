    <include
        android:id="@+id/bottom_sheet_bar"
        layout="@layout/layout_bottom_sheet_bar" />


    <!--  SEKCJA DETALI  -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingBottom="5dp"
        android:text="@string/label_question"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_tile"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/field_question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="name"
            android:background="@color/transparent"
            android:hint="@string/hint_question_text"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:minLines="1" />

        <LinearLayout
            android:id="@+id/section_assigned_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_no_categories"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/label_no_categories"
                    android:textStyle="italic"
                    android:textColor="@color/text_disabled"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categories_recycler_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/view_color_outlined_label" />

                <ImageButton
                    android:id="@+id/button_assign_category"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/transparent"
                    android:contentDescription="@string/ic_desc_add"
                    android:src="@drawable/ic_add_circle_outline_24"
                    app:tint="?attr/colorPrimary" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/section_creation_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:text="@string/label_created_on"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/label_creation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:text="@string/text_placeholder_short"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:text="@string/label_created_by"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/created_by_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:text="@string/text_placeholder_short"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- SEKCJA PYTAÅƒ -->
    <LinearLayout
        android:id="@+id/section_answers_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/all_answers_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingEnd="5dp"
            android:text="@string/text_placeholder_number"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_answers"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/label_correct_answers"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/correct_answers_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="3dp"
            android:text="@string/text_placeholder_number"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/section_answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_tile"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/answers_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/card_answer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/field_new_answer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="name"
                android:background="@color/transparent"
                android:hint="@string/hint_answer"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:minLines="1" />

            <ImageButton
                android:id="@+id/button_add_answer"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@color/transparent"
                android:contentDescription="@string/ic_desc_add"
                android:src="@drawable/ic_add_circle_outline_24"
                app:tint="?attr/colorPrimary" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

