<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_tile"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:elevation="5dp">

    <View
        android:id="@+id/color_preview"
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_category_color"
        android:layout_marginHorizontal="@dimen/tile_rounded_corner_radius" />

    <TextView
        android:id="@+id/label_category_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_placeholder_short"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/color_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/label_category_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="@string/text_placeholder_long"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/label_category_title"
        app:layout_constraintTop_toBottomOf="@id/label_category_title"
        app:layout_constraintEnd_toStartOf="@id/color_preview"
        android:layout_marginEnd="10dp"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toStartOf="@id/color_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_category_description" />

    <TextView
        android:id="@+id/category_questions_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:text="@string/text_placeholder_number"
        android:textColor="@color/primary"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/label_category_title"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/label_category_questions_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:text="@string/label_category_questions_amount_singular"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/category_questions_amount"
        app:layout_constraintStart_toEndOf="@id/category_questions_amount"
        app:layout_constraintTop_toTopOf="@+id/category_questions_amount" />

    <com.rafalskrzypczyk.quiz_mode.presentation.custom_views.ColorOutlinedLabelView
        android:id="@+id/category_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/category_questions_amount"
        app:layout_constraintTop_toTopOf="@+id/category_questions_amount"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="7dp" />

</androidx.constraintlayout.widget.ConstraintLayout>