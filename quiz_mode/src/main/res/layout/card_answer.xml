<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_tile"
    android:paddingHorizontal="10dp"
    android:elevation="5dp"
    android:clipToPadding="false"
    android:layout_marginBottom="5dp">

    <EditText
        android:id="@+id/field_question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="name"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:hint="@string/hint_answer"
        tools:ignore="TextFields" />

    <LinearLayout
        android:id="@+id/correct_answer_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_is_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/label_incorrect_answer"
            android:textColor="@color/red"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UseSwitchCompatOrMaterialXml"
            app:thumbTint="@color/selector_correct_switch_tint"/>
    </LinearLayout>

</LinearLayout>